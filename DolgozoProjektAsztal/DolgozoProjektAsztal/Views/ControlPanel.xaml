<UserControl x:Class="DolgozoProjektAsztal.Views.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DolgozoProjektAsztal.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <TextBlock Text="{Binding DolgozokSzama}"></TextBlock>
        <TextBlock Text="{Binding Fizetesnelkuliek}"></TextBlock>
        <TextBlock Text="{Binding Fizetestkapok}"></TextBlock>
        <TextBlock Text="{Binding Legtobbetkapo}"></TextBlock>
        <TextBlock Text="{Binding Legkevesebbetkapo}"></TextBlock>
        <TextBlock Text="{Binding Atlagkereset}"></TextBlock>
    </StackPanel>
</UserControl>
